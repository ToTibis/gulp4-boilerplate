extends ../layout/main

block mainVariables
	- pageTitle = 'Главная'

block mainContent

	- listClass = ['list'];
	- imageAttributes = {"src": "img/v8.png", "alt": "Alternative description", 'class': 'v8-image'};
	-
		listItems  = [
			'- HTML - processing using Pug.js',
			'- Sass - Bootstrap 4 grid-generator, a set of useful mixins out of the box',
			'- Javascript ES6 Modules - processing using Webpack 4',
			'- Without jQuery - instead in this template included set of helpers-functions written on vanilla javascript',
			'- SVG-sprites',
		];

	.container.pt-5
		.row.align-items-center
			.col-md-4.col-xl-3
				a(href='https://github.com/ToTibis' target='_blank', class='github-link').mx-auto
					+icon('github')
			.col-md-8.col-xl-6
				section(class='section')
					h1 In this boilerplate you can use:
					ul(class=listClass)
						each item, index in listItems
							li(class=[index === 0 ? 'active active2' : ''] data-index=index)
								span.d-block !{item}
				.row.mt-4
					.col-md-auto.mb-3.mb-md-0
						button(type='button' class=['button'] data-modal-open='example-static-first')
							span.d-block First modal
					.col-md-auto.mb-3.mb-md-0
						button(type='button' class=['button'] data-modal-open='example-static-second')
							span.d-block Second modal
					.col-md-auto.mb-3.mb-md-0
						button(type='button' class=['button'])#section-toggle
							span.d-block Section slide toggle

			.col-3.d-none.d-xl-block
				span.image-holder(data-parallax-deep='100').parallax-layer
					img&attributes(imageAttributes)
